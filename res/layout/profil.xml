<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- Name -->

    <TextView
        android:id="@+id/txtprofil"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:paddingLeft="15dip"
        android:text=" Profil"
        android:textColor="#074290"
        android:textSize="30dip"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="102dp"
            android:layout_height="135dp"
            android:src="@drawable/default_profile_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtname"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dip"
                android:paddingLeft="15dip"
               
                android:textColor="#ffffff"
                android:textSize="21dip" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dip"
                android:paddingLeft="15dip"
               android:text="Points : 10 "
                android:textColor="#ffffff"
                android:textSize="21dip" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dip"
            android:layout_marginTop="10dip"
            android:textColor="#ffffff"
            android:textSize="20dip" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtSexe"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:textColor="#ffffff"
        android:paddingLeft="15dip"
        android:textSize="21dip" />

    <TextView
        android:id="@+id/txtProfession"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:textColor="#ffffff"
        android:paddingLeft="15dip"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dip"
       android:layout_marginTop="10dip"
        android:textColor="#ffffff"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/txtcreated"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dip"
        android:layout_marginTop="10dip"
        android:textColor="#ffffff"
        android:textSize="20dip" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dip"
        android:background="@drawable/btn_bluee"
        android:text="Mise Ã  jour" 
         android:textStyle="bold"/>

</LinearLayout>